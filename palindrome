#include<stdlib.h>
#include<string>
#include<iostream>
#include<cstring>

using namespace std;

    void test(string strr)
    {
        bool palindrome;
        int i,j;
        int n= strr.length();
        for (i=0;i<=n;i++)
        {
            if (strr[i]==strr[n-i-1])
                palindrome=true;
        }

        if (palindrome==true)
            cout <<"palindrome";
        else
            cout <<"no";
    }

    int main ()
{
    string sr;
    cout <<"enter the string ";  // has to be a bigger string
    cin>>sr;
    test(sr);
}
