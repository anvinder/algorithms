#include <iostream>
#include<iomanip>
#include<stdio.h>
#include<stdlib.h>

using namespace std;


int main ()
{
string data="let's see what happens";
cout<<data<<endl;

data.append(" By friday");
cout<<data<<endl;

cout<<"string size: "<<data.size()<<endl;

data.insert(0, "Anxious...");
cout<<data<<endl;

cout<<data.substr(33)<<endl;
// show 33rd character onwards

cout<<data.erase(0, 16)<<endl;
//erase 16 letters from 0th position.

cout<<data.erase(7, 9)<<endl;
    return 0;
}
