#include <iostream>
#include <fstream>

using namespace std;

int main ()
{

fstream file ("anvi.txt", ios::in|ios::app | ios::out);
if(!file.is_open())
{
    cout<<"error opening file";
}
else
{
    cout<<"writing to the file"<<endl;
file<<"test1"<<endl;

file.seekg(0);
    string line;
while (file.good())
{
    getline(file, line);
    cout<<line<<endl;
}
}
    return 0;
}
